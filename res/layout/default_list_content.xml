<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="2sp" >

    <RelativeLayout
        android:id="@+id/LinearLayout_maint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/defaultTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:textSize="13sp"
            android:textStyle="bold" >
        </TextView>

       		<TextView
            	android:id="@+id/defaultValue1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_toRightOf="@+id/defaultTitle1"
            	android:paddingBottom="2dip"
            	android:textSize="13sp" >
        	</TextView>

        	<TextView
            	android:id="@+id/defaultUnit1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_toRightOf="@+id/defaultValue1"
            	android:paddingBottom="2dip"
            	android:textSize="13sp" >
        	</TextView>

	        <TextView
    	        android:id="@+id/defaultValue2"
	            android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
            	android:paddingBottom="2dip"       
            	android:textSize="13sp" >
        	</TextView>

        <TextView
            android:id="@+id/defaultTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/defaultTitle1"
            android:paddingBottom="2dip"
            android:textSize="13sp"
            android:textStyle="bold" >
        </TextView>

        	<TextView
            	android:id="@+id/defaultValue21"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_below="@id/defaultTitle1"
            	android:layout_toRightOf="@id/defaultTitle2"
            	android:paddingBottom="2dip"
            	android:textSize="13sp" >
        	</TextView>

        	<TextView
            	android:id="@+id/defaulTitle3"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_below="@id/defaultTitle2"
            	android:textSize="13sp"
            	android:textStyle="bold" >
        	</TextView>

        	<TextView
            	android:id="@+id/defaultValue31"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_below="@id/defaultTitle2"
            	android:layout_toRightOf="@id/defaulTitle3"
            	android:textSize="13sp" >
        	</TextView>

        	<TextView
        	    android:id="@+id/defaultUnit3"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_below="@id/defaultTitle2"
            	android:layout_toRightOf="@+id/defaulTitle3"
	            android:textSize="13sp" >
        	</TextView>

        	<TextView
            	android:id="@+id/defaultDate"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
            	android:layout_below="@id/defaultTitle2"  >
        	</TextView>
    </RelativeLayout>

</RelativeLayout>