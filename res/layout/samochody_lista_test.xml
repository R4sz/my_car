<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="2sp"  >

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lista_nazwa_samochodu_title"
           	style="@style/listviewContentTitles"
            android:text="Nazwa: ">
        </TextView>

        <TextView
            android:id="@+id/lista_nazwa_samochodu"
            style="@style/listviewContentTitles.values"
            android:text="b/d nazwa" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lista_marka_samochodu_title"
            style="@style/listviewContentTitles"
            android:text="Marka: ">
        </TextView>

        <TextView
            android:id="@+id/lista_marka_samochodu"
           	style="@style/listviewContentTitles.values"
            android:text="marka b/d" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lista_model_samochodu_title"
           	style="@style/listviewContentTitles"
            android:text="Model: " >
        </TextView>

        <TextView
            android:id="@+id/lista_model_samochodu"
            style="@style/listviewContentTitles.values"
            android:layout_weight="1"
            android:text="model b/d"  >
        </TextView>

        <TextView
            android:id="@+id/lista_przebieg_samochodu"
            style="@style/listviewContentTitles.values"
            android:text="przebieg b/d" >
        </TextView>
        
        <TextView
            style="@style/listviewContentTitles.values"
            android:text=" km" >
        </TextView>            
    </LinearLayout>

</LinearLayout>